    props.title &&
    props.releaseDate &&
    props.genres &&
    props.overview &&

      <div className="col">
        <div>
          <p>{props.title}</p>
          <p>{props.releaseDate}</p>
          <p>{props.genres}</p>
          <p>{props.overview}</p>
        </div>
      </div>
  }
  </div>
</div>
